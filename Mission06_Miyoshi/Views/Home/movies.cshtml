@{
    ViewData["Title"] = "Movie Collection";
}

@model Movies

<!-- Display the page title stored in ViewData -->
<h1>@ViewData["Title"]</h1>

<!-- Form for submitting a new movie record -->
<form method="post">

    <!-- Category field (required) -->
    <label asp-for="Category">Category: </label>
    <input asp-for="Category" required/>
    <br/>

    <!-- Title field (required) -->
    <label asp-for="Title">Title: </label>
    <input asp-for="Title" required/>
    <br/>

    <!-- Year field (required) -->
    <label asp-for="Year">Year: </label>
    <input asp-for="Year" required/>
    <br/>

    <!-- Director field (required) -->
    <label asp-for="Director">Director: </label>
    <input asp-for="Director" required/>
    <br/>

    <!-- Dropdown menu for Rating (required) -->
    <label asp-for="Rating">Rating: </label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br/>

    <!-- Dropdown menu for Edited field (optional, Yes/No) -->
    <label asp-for="Edited">Edited: </label>
    <select asp-for="Edited">
        <option value="ture">Yes</option>
        <option value="false">No</option>
    </select>
    <br/>

    <!-- Lent To field (optional) -->
    <label asp-for="LentTo">Lent To: </label>
    <input asp-for="LentTo"/>
    <br/>

    <!-- Notes field (optional, max 25 characters) -->
    <label asp-for="Notes">Notes: </label>
    <input asp-for="Notes" maxlength="25"/>
    <br/>

    <!-- Submit button -->
    <button type="submit">Save the Movie</button>
</form>